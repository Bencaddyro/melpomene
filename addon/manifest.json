{

  "description": "Small boilerplate to retrieve url for yt-dlp",
  "manifest_version": 2,
  "name": "melpomene",
  "version": "1.0",
  "icons": {
    "16": "icons/page-16.png",
    "32": "icons/page-32.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "melpomene@example.org",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "selector.html",
    "default_icon": "icons/page-16.png"

  },

  "permissions": ["nativeMessaging", "tabs"]

}
